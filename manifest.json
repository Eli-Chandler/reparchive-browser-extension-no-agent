{
  "manifest_version": 3,
  "name": "My Agent Extension by RepArchive",
  "version": "1.0.1",
  "description": "My Agent Extension - automatically convert all links to your favorite agent and enrich the page with online information, sales statistics and qc pictures. Works with all agents and Weidian, Taobao and 1688 marketplaces. Not affiliated with taobao.com or weidian.com; developed by RepArchive.com.",
  "icons": {
    "48": "assets/icon.png"
  },
  "action": {
    "default_icon": "assets/icon.png",
    "default_popup": "assets/popup.html"
  },
  "host_permissions": [
    "https://www.reddit.com/*",
    "https://old.reddit.com/*",
    "file:///*",
    "https://api.reparchive.com/livefeed/details/item/*",
    "https://product2.rep.ninja/checkforqc*",
    "https://api.ch-webdev.com/*",
    "https://*.wegobuy.com/**/login/**type=register*",
    "https://www.pandabuy.com/login*",
    "https://*.superbuy.com/**/login/**type=register*",
    "https://sugargoo.com/index/user/register*",
    "https://www.sugargoo.com/index/user/register*",
    "https://cssbuy.com/?go=user&action=register*",
    "https://www.cssbuy.com/?go=user&action=register*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/agent_logos/*", "assets/platform_logos/*"],
      "matches": [
        "https://www.reddit.com/*",
        "https://old.reddit.com/*",
        "file:///*"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.reddit.com/*",
        "https://old.reddit.com/*",
        "file:///*"
      ],
      "js": ["build/content_script.js"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://*.wegobuy.com/**/login/**type=register*",
        "https://www.pandabuy.com/login*",
        "https://*.superbuy.com/**/login/**type=register*",
        "https://sugargoo.com/index/user/register*",
        "https://www.sugargoo.com/index/user/register*",
        "https://cssbuy.com/?go=user&action=register*",
        "https://www.cssbuy.com/?go=user&action=register*"
      ],
      "js": ["build/redirect.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "build/background.js"
  },
  "permissions": ["storage"],
  "browser_specific_settings": {
    "gecko": {
      "id": "reparchive-browser-extension@ch-webdev.com"
    }
  }
}
